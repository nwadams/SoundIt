<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:endColor="@color/btn_disabled_red_1" android:startColor="@color/btn_disabled_red_2" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="1dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/btn_pressed_red_2" android:startColor="@color/btn_pressed_red_1" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="1dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    
    <item android:state_enabled="true"><shape>
            <gradient android:angle="270" android:endColor="@color/btn_enabled_red_2" android:startColor="@color/btn_enabled_red_1" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="1dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>